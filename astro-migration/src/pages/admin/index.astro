---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import { db } from '../../db';
import { announcements, subscribers } from '../../db/schema';
import { eq, desc } from 'drizzle-orm';

const ADMIN_USER = import.meta.env.ADMIN_USER;
const ADMIN_PASS = import.meta.env.ADMIN_PASS;
const COOKIE_NAME = 'admin_session';

let isAuthenticated = false;
let error = '';
let success = '';

// Check for existing session
if (Astro.cookies.has(COOKIE_NAME)) {
  const cookie = Astro.cookies.get(COOKIE_NAME);
  if (cookie && cookie.value === 'true') {
    isAuthenticated = true;
  }
}

// Check for success message in URL
if (Astro.url.searchParams.has('success')) {
  success = Astro.url.searchParams.get('success') || '';
}

// Handle POST requests
if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const action = data.get('action');

    if (action === 'login') {
      const username = data.get('username');
      const password = data.get('password');

      if (username === ADMIN_USER && password === ADMIN_PASS) {
        Astro.cookies.set(COOKIE_NAME, 'true', {
          path: '/',
          httpOnly: true,
          secure: import.meta.env.PROD,
          maxAge: 60 * 60 * 24 // 1 day
        });
        isAuthenticated = true;
        return Astro.redirect('/admin');
      } else {
        error = 'Invalid username or password';
      }
    } else if (action === 'logout') {
      Astro.cookies.delete(COOKIE_NAME, { path: '/' });
      isAuthenticated = false;
      return Astro.redirect('/admin');
    } else if (isAuthenticated) {
        if (action === 'add_announcement') {
            const title = data.get('title') as string;
            const content = data.get('content') as string;
            if (title && content) {
                await db.insert(announcements).values({ title, content });
                return Astro.redirect('/admin?success=Announcement+added+successfully');
            }
        } else if (action === 'delete_announcement') {
            const id = Number(data.get('id'));
            if (id) {
                await db.delete(announcements).where(eq(announcements.id, id));
                return Astro.redirect('/admin?success=Announcement+deleted+successfully');
            }
        } else if (action === 'notify_subscribers') {
            // Mock notification logic
            const allSubscribers = await db.select().from(subscribers);
            return Astro.redirect(`/admin?success=Notification+sent+to+${allSubscribers.length}+subscribers!`);
        }
    }
  } catch (e) {
    console.error(e);
    error = 'An error occurred';
  }
}

const allAnnouncements = isAuthenticated ? await db.select().from(announcements).orderBy(desc(announcements.createdAt)) : [];
const subscriberCount = isAuthenticated ? (await db.select().from(subscribers)).length : 0;
---

<Layout title="Admin Dashboard">
  <!-- Background Effects -->
  <div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none">
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-blue-600/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-purple-600/20 blur-[120px]"></div>
  </div>

  <div class="container mx-auto px-4 py-12 min-h-screen flex items-center justify-center">
    {isAuthenticated ? (
      <div class="glass-card w-full max-w-6xl shadow-2xl relative overflow-hidden">
        <!-- Decorative top border -->
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-400 to-purple-500"></div>
        
        <div class="flex justify-between items-center mb-8 border-b border-white/10 pb-4">
          <h1 class="text-3xl font-bold text-white flex items-center">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-500">
              <i class="fas fa-shield-alt mr-3 text-cyan-400"></i>
              Admin Dashboard
            </span>
          </h1>
          <form method="POST" class="m-0">
            <input type="hidden" name="action" value="logout" />
            <button type="submit" class="bg-red-500/20 hover:bg-red-500/30 text-red-200 border border-red-500/30 px-4 py-2 rounded-lg transition-all flex items-center gap-2 backdrop-blur-sm">
              <i class="fas fa-sign-out-alt"></i> Logout
            </button>
          </form>
        </div>

        {success && (
            <div class="bg-green-500/10 border border-green-500/20 text-green-200 px-4 py-3 rounded-lg mb-6 text-sm flex items-center backdrop-blur-sm animate-fade-in">
                <i class="fas fa-check-circle mr-2 text-green-400"></i>
                {success}
            </div>
        )}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Sidebar / Stats -->
            <div class="space-y-6">
                <div class="bg-white/5 border border-white/10 p-6 rounded-xl backdrop-blur-sm">
                    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
                    <i class="fas fa-server text-cyan-400 mr-2"></i> System Status
                    </h2>
                    <div class="space-y-3">
                    <div class="flex justify-between text-gray-300">
                        <span>Status</span>
                        <span class="text-green-400 font-mono flex items-center gap-2">
                          <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
                          Online
                        </span>
                    </div>
                    <div class="flex justify-between text-gray-300">
                        <span>Subscribers</span>
                        <span class="text-cyan-400 font-mono">{subscriberCount}</span>
                    </div>
                    <div class="flex justify-between text-gray-300">
                        <span>Announcements</span>
                        <span class="text-purple-400 font-mono">{allAnnouncements.length}</span>
                    </div>
                    </div>
                </div>

                <div class="bg-white/5 border border-white/10 p-6 rounded-xl backdrop-blur-sm">
                    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
                    <i class="fas fa-bolt text-yellow-400 mr-2"></i> Actions
                    </h2>
                    <form method="POST" class="w-full">
                        <input type="hidden" name="action" value="notify_subscribers" />
                        <button type="submit" class="w-full bg-gradient-to-r from-yellow-600 to-orange-600 hover:from-yellow-500 hover:to-orange-500 text-white p-3 rounded-lg shadow-lg shadow-orange-900/20 transition-all transform hover:-translate-y-0.5 text-sm flex items-center justify-center gap-2 font-medium">
                            <i class="fas fa-paper-plane"></i> Notify Subscribers
                        </button>
                        <p class="text-xs text-gray-400 mt-3 text-center">Sends latest announcement to all subscribers.</p>
                    </form>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Add Announcement -->
                <div class="bg-white/5 border border-white/10 p-6 rounded-xl backdrop-blur-sm">
                    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
                        <i class="fas fa-plus-circle text-cyan-400 mr-2"></i> New Announcement
                    </h2>
                    <form method="POST" class="space-y-4">
                        <input type="hidden" name="action" value="add_announcement" />
                        <div>
                            <label class="block text-sm font-medium text-gray-300 mb-1">Title</label>
                            <input type="text" name="title" required class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50 transition-all" placeholder="Announcement Title" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-300 mb-1">Content</label>
                            <textarea name="content" required rows="3" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50 transition-all" placeholder="Announcement details..."></textarea>
                        </div>
                        <button type="submit" class="bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 text-white px-6 py-2.5 rounded-lg shadow-lg shadow-blue-900/20 transition-all transform hover:-translate-y-0.5 font-medium">
                            Post Announcement
                        </button>
                    </form>
                </div>

                <!-- List Announcements -->
                <div class="bg-white/5 border border-white/10 p-6 rounded-xl backdrop-blur-sm">
                    <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
                        <i class="fas fa-list text-purple-400 mr-2"></i> Recent Announcements
                    </h2>
                    <div class="space-y-4">
                        {allAnnouncements.length === 0 ? (
                            <p class="text-gray-400 italic text-center py-8">No announcements yet.</p>
                        ) : (
                            allAnnouncements.map((ann) => (
                                <div class="bg-black/20 p-5 rounded-lg border border-white/5 flex justify-between items-start group hover:border-white/10 transition-colors">
                                    <div>
                                        <h3 class="text-white font-medium text-lg">{ann.title}</h3>
                                        <p class="text-gray-400 text-sm mt-2 leading-relaxed">{ann.content}</p>
                                        <div class="flex items-center gap-4 mt-3">
                                            <span class="text-gray-500 text-xs flex items-center gap-1">
                                                <i class="far fa-clock"></i>
                                                {new Date(ann.createdAt).toLocaleDateString()}
                                            </span>
                                            <span class="text-xs px-2 py-0.5 rounded-full bg-green-500/10 text-green-400 border border-green-500/20">
                                                Active
                                            </span>
                                        </div>
                                    </div>
                                    <form method="POST" onsubmit="return confirm('Are you sure?');" class="transition-opacity">
                                        <input type="hidden" name="action" value="delete_announcement" />
                                        <input type="hidden" name="id" value={ann.id} />
                                        <button type="submit" class="text-red-400 hover:text-red-300 p-2 hover:bg-red-500/10 rounded transition-colors" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            ))
                        )}
                    </div>
                </div>
            </div>
        </div>
      </div>
    ) : (
      <div class="glass-card w-full max-w-md shadow-2xl relative overflow-hidden">
        <!-- Decorative top border -->
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-cyan-400 to-purple-500"></div>
        
        <div class="text-center mb-8 pt-4">
          <div class="w-20 h-20 bg-gradient-to-br from-cyan-500/20 to-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-6 border border-white/10 backdrop-blur-sm">
            <i class="fas fa-lock text-3xl text-cyan-400"></i>
          </div>
          <h1 class="text-2xl font-bold text-white">Admin Access</h1>
          <p class="text-gray-400 mt-2">Please authenticate to continue</p>
        </div>

        {error && (
          <div class="bg-red-500/10 border border-red-500/20 text-red-200 px-4 py-3 rounded-lg mb-6 text-sm flex items-center backdrop-blur-sm animate-shake">
            <i class="fas fa-exclamation-circle mr-2 text-red-400"></i>
            {error}
          </div>
        )}

        <form method="POST" class="space-y-6">
          <input type="hidden" name="action" value="login" />
          
          <div>
            <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-user text-gray-500 group-focus-within:text-cyan-400 transition-colors"></i>
              </div>
              <input
                type="text"
                id="username"
                name="username"
                required
                class="block w-full pl-10 pr-3 py-3 bg-black/20 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50 transition-all"
                placeholder="Enter username"
              />
            </div>
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-key text-gray-500 group-focus-within:text-cyan-400 transition-colors"></i>
              </div>
              <input
                type="password"
                id="password"
                name="password"
                required
                class="block w-full pl-10 pr-3 py-3 bg-black/20 border border-white/10 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-cyan-500/50 focus:ring-1 focus:ring-cyan-500/50 transition-all"
                placeholder="Enter password"
              />
            </div>
          </div>

          <button
            type="submit"
            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg shadow-cyan-900/20 text-sm font-bold text-white bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 transition-all transform hover:-translate-y-0.5"
          >
            Sign In
          </button>
        </form>
      </div>
    )}
  </div>
</Layout>
