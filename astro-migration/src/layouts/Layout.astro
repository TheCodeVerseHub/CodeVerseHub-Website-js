---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'CodeVerseHub', description = 'Join our Discord coding community' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
    <link rel="alternate icon" type="image/x-icon" href="/images/favicon.ico" />
    <meta name="theme-color" content="#06121c" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <title>{title}</title>
  </head>
  <body class="dark-theme">
    <header class="compact-navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">CodeVerseHub</a>
            
            <button class="mobile-toggle" id="mobileToggle">
                <i class="fas fa-bars"></i>
            </button>
            
            <ul class="navbar-links" id="navbarLinks">
                <li class="navbar-item">
                    <a href="/" class="navbar-link">Home</a>
                </li>
                <li class="navbar-item">
                    <a href="/resources" class="navbar-link">Resources</a>
                </li>
                <li class="navbar-item">
                    <a href="/rules" class="navbar-link">Rules</a>
                </li>
                <li class="navbar-item">
                    <a href="/faq" class="navbar-link">FAQ</a>
                </li>
                <li class="navbar-item">
                    <a href="/about" class="navbar-link">About</a>
                </li>
                <li class="navbar-item">
                    <a href="/timeline" class="navbar-link">Timeline</a>
                </li>
            </ul>
        </div>
    </header>

    <main>
      <slot />
    </main>

    <!-- Footer -->
        <!-- Modern Footer -->
    <footer class="footer-modern">
        <div class="footer-container">
            <div class="footer-grid">
                <!-- Brand Column -->
                <div class="footer-brand-col">
                    <a href="/" class="footer-logo">
                        <img src="/images/image.png" alt="CVH Logo">
                        <span class="footer-logo-text">CodeVerseHub</span>
                    </a>
                    <p class="footer-desc">
                        A thriving community for developers to learn, collaborate, and grow together. Join us and level up your coding journey.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="footer-col">
                    <span class="footer-heading">Platform</span>
                    <ul class="footer-links">
                        <li><a href="/" class="footer-link"><i class="fas fa-home"></i> Home</a></li>
                        <li><a href="/resources" class="footer-link"><i class="fas fa-book"></i> Resources</a></li>
                        <li><a href="/rules" class="footer-link"><i class="fas fa-gavel"></i> Rules</a></li>
                        <li><a href="/timeline" class="footer-link"><i class="fas fa-clock"></i> Timeline</a></li>
                    </ul>
                </div>

                <!-- Community -->
                <div class="footer-col">
                    <span class="footer-heading">Community</span>
                    <ul class="footer-links">
                        <li><a href="/about" class="footer-link"><i class="fas fa-info-circle"></i> About</a></li>
                        <li><a href="/faq" class="footer-link"><i class="fas fa-question-circle"></i> FAQ</a></li>
                        <li><a href="https://discord.gg/3xKFvKhuGR" target="_blank" rel="noopener" class="footer-link"><i class="fab fa-discord"></i> Discord</a></li>
                    </ul>
                </div>

                <!-- Stats -->
                <div class="footer-col">
                    <span class="footer-heading">Live Stats</span>
                    <div class="footer-stats-grid">
                        <div class="footer-stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">720+</span>
                                <span class="stat-label">Members</span>
                            </div>
                        </div>
                        <div class="footer-stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">50+</span>
                                <span class="stat-label">Channels</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="footer-bottom">
                <div class="copyright">
                    &copy; {new Date().getFullYear()} <strong>CodeVerseHub</strong>. Crafted with <i class="fas fa-heart text-danger"></i> for developers.
                </div>
                <div class="footer-socials">
                    <a href="https://discord.gg/3xKFvKhuGR" class="footer-social-link" aria-label="Discord"><i class="fab fa-discord"></i></a>
                    <a href="https://github.com/TheCodeVerseHub" class="footer-social-link" aria-label="GitHub"><i class="fab fa-github"></i></a>
                    <a href="https://www.instagram.com/thecodeversehub/" class="footer-social-link" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        
        <button type="button" id="backToTopBtn" class="back-to-top" aria-label="Back to top">
            <i class="fas fa-arrow-up"></i>
        </button>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
    // Navbar Mobile Toggle
    document.addEventListener('DOMContentLoaded', function() {
        const mobileToggle = document.getElementById('mobileToggle');
        const navbarLinks = document.getElementById('navbarLinks');
        const focusableSelector = 'a, button';
        let lastFocused = null;

        function openMenu(){
            navbarLinks.classList.add('open');
            document.body.classList.add('nav-open');
            lastFocused = document.activeElement;
            const first = navbarLinks.querySelector(focusableSelector);
            first && first.focus();
        }
        function closeMenu(){
            navbarLinks.classList.remove('open');
            document.body.classList.remove('nav-open');
            if(lastFocused) lastFocused.focus();
            const icon = mobileToggle.querySelector('i');
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
        }

        if (mobileToggle) {
            mobileToggle.addEventListener('click', function() {
                const isOpen = navbarLinks.classList.contains('open');
                if(isOpen){ closeMenu(); }
                else {
                    openMenu();
                    const icon = mobileToggle.querySelector('i');
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                }
            });
        }

        navbarLinks.querySelectorAll('a').forEach(a => a.addEventListener('click', ()=>{
            if(window.innerWidth <= 768){ closeMenu(); }
        }));

        document.addEventListener('keydown', (e)=>{
            if(e.key === 'Escape' && document.body.classList.contains('nav-open')){
                closeMenu();
            }
        });

        document.addEventListener('click', (e)=>{
            if(window.innerWidth > 768) return;
            if(!navbarLinks.contains(e.target) && e.target !== mobileToggle && !mobileToggle.contains(e.target) && document.body.classList.contains('nav-open')){
                closeMenu();
            }
        });
    });
    
    // Back To Top
    (function(){
        const btn = document.getElementById('backToTopBtn');
        if(!btn) return;
        const revealAt = 300;
        function toggle(){
            if (window.scrollY > revealAt) {
                btn.classList.add('visible');
            } else {
                btn.classList.remove('visible');
            }
        }
        window.addEventListener('scroll', toggle, {passive:true});
        toggle();
        btn.addEventListener('click', ()=> window.scrollTo({top:0, behavior:'smooth'}));
    })();
    </script>
    
    <style is:global>
      @import '../styles/vars.css';
      @import '../styles/global.css';
      @import '../styles/style.css';
      @import '../styles/navbar.css';
      @import '../styles/footer-modern.css';
      @import '../styles/home-styles.css';
      @import '../styles/contact-v2.css';
      @import '../styles/cta-v2.css';
      @import '../styles/about-v2.css';
      @import '../styles/rules-v2.css';
      @import '../styles/rules-modern.css';
      @import '../styles/faq-modern.css';
      @import '../styles/about-modern.css';
      @import '../styles/animation.css';
      @import '../styles/responsive-enhancements.css';
    </style>
  </body>
</html>
