# Environment variables for CodeVerseHub (copy to .env and adjust)
# NEVER commit your real .env file.

# Core
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=False
ALLOWED_HOSTS=codeversehub.onrender.com,localhost,127.0.0.1

# Database (Render auto injects DATABASE_URL). For local Postgres, uncomment:
# DATABASE_URL=postgres://user:password@localhost:5432/codeversehub

# Security toggles
SECURE_SSL_REDIRECT=True

